<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.au.employeemanagement2.AdminLand"
                android:tag="viewdatabase"
               >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:textColor="#FFFAFAFA"
        android:layout_alignParentBottom="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText42"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editText41"
        android:layout_marginBottom="14dp"
        android:visibility="invisible"
        android:background="#33C0C2CD"
        android:textColor="#fefdfd"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText41"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editText4"
        android:layout_marginBottom="14dp"
        android:visibility="invisible"
        android:background="#33C0C2CD"
        android:textColor="#fefdfd"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        android:background="#33C0C2CD"
        android:textColor="#fefdfd"

        />
<Button
    android:layout_width="80dp"
    android:layout_height="45dp"
    android:textSize="9dp"
    android:onClick="selectSlots2"
    android:id="@+id/button60"

    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:text="SELECT SLOT(S)"
    android:layout_marginLeft="5dp"
    android:visibility="invisible"
    android:background="#803261AC"
    android:textColor="#fefdfd"


    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button6"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="#803261AC"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/searchView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4DC0C2CD"

        android:layout_marginBottom="5dp"/>

</RelativeLayout>